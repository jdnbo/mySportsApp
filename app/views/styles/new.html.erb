<div class="container">
  <%= render 'shared/page_title', title: 'Create a New Style' %>
  <%= render 'shared/errors', obj: @style %>
  <div class="row">
    <div class="well col-md-8 col-md-offset-2">
      <%= form_for(@style, html: { multipart: true }) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        
        <%= f.submit(@style.new_record? ? 'Create Style' : 'Edit Recipe', class: 'btn btn-success') %>
      <% end %>
    </div>
  </div>
</div>