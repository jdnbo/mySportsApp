<div class="row">
  <div class="col-md-10">
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %>
        <a class="close" data-dismiss="alert">&#215;</a><!--this is an anchor tag with an x to close the box - &#215; is the html code for this box-->
      </div>
    <% end %>
  </div>
</div>