<header class="navbar navbar-fixed-top navbar-default">
  <div style="margin-right:20px;margin-left:20px">
    <%= link_to "mySports", root_path, class: "btn btn-sm btn-success", id: "logo" %>
    <div class="nav_item">
      <%=link_to "All Recipes", recipes_path, class: "btn btn-default btn-warning" %>
    </div>
    <div class="nav_item">
      <%=link_to "All Chefs", chefs_path, class: "btn btn-default btn-warning" %>
    </div>
    <ul class="nav_ul_item">
      <li class="dropdown">
        <%= link_to '#', class: 'btn btn-default btn-warning dropdown-toggle', 'data-toggle' => 'dropdown' do %>
          Styles <b class='caret'></b>
        <% end %>
        <ul class='dropdown-menu'>
          <% Style.all.each do |style| %>
            <li><%= link_to style.name, style_path(style) %></li>
          <% end %>
          <% if logged_in? %>
            <li class='divider'></li>
            <li>
              <%= link_to(new_style_path) do %>
                New Style
              <% end %>
            </li>
          <% end %>
        </ul>
      </li>
    </ul>
    <ul class="nav_ul_item">
      <li class="dropdown">
        <%= link_to '#', class: 'btn btn-default btn-warning dropdown-toggle', 'data-toggle' => 'dropdown' do %>
          Ingredients <b class='caret'></b>
        <% end %>
        <ul class='dropdown-menu'>
          <% Ingredient.all.each do |ing| %>
            <li><%= link_to ing.name, ingredient_path(ing) %></li>
          <% end %>
          <% if logged_in? %>
            <li class='divider'></li>
            <li>
              <%= link_to(new_ingredient_path) do %>
                New Ingredient
              <% end %>
            </li>
          <% end %>
        </ul>
      </li>
    </ul>
    <% if logged_in? %>
      <div class="nav_item">
        <%= link_to "Create New Recipe", new_recipe_path, class: "btn btn-default btn-warning" %>
      </div>
      <ul class="nav_ul_item">
        <li class="dropdown">
          <%= link_to '#', class: 'btn btn-default btn-danger dropdown-toggle', 'data-toggle' => 'dropdown' do %>
            <%= current_user.chefname %> <b class='caret'></b>
          <% end %>
          <ul class='dropdown-menu'>
            <li><%= link_to "View Profile", chef_path(current_user) %></li>
            <li><%= link_to "Edit Profile", edit_chef_path(current_user) %></li>
            <li class="divider"></li>
            <li><%= link_to "Logout", logout_path %></li>
          </ul>
        </li>
      </ul>
      <div class="nav_item pull-right">
        <%= link_to "Logout", logout_path, class: "btn btn-default btn-warning" %>
      </div>
    <% else %>
      <div class="nav_item pull-right">
        <%= link_to "Login", login_path, class: "btn btn-default btn-warning" %>
      </div>
    <% end %>
  </div>
</header>
