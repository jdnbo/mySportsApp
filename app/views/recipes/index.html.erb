<div class="container">

  <%= render 'shared/page_title', title: 'All Recipes' %>
  
  <% @recipes.each do |recipe| %>
    <div class="row">
      
      <div class = "col-md-2">
        <section class="chef_info center"><!--this is an area for the gravatar-->
          <%= gravatar_for recipe.chef, size: 100 %>
          <h5>Chef name: <%= recipe.chef.chefname %></h5>
        </section>
      </div>
      
      <div class = "col-lg-8 well">
        <h4><%= link_to recipe.title, recipe_path(recipe)%></h4>
        <p><%= recipe.description %></p>
        <p>
          <span class='quiet'><small> <%= time_ago_in_words(recipe.created_at) %></small></span>
        </p>
      </div>
      
    </div>
    <hr/>
  <% end %>
  
</div>